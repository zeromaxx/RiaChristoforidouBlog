<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Ria CookBook</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/ckeditor")
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
</head>
<body>
    <nav style="background: #5bc4bc" class="navbar navbar-expand-lg">
        <div class="container-fluid">

            <ul class="navbar-nav active">
                <li class="nav-item">
                    @Html.ActionLink("Ria's CookBook", "Index", "Home", null, new { @class = "nav-link link-light" })
                </li>

                <li>
                    @Html.ActionLink("Δημιουργία Συνταγής", "CreateRecipe", "Home", null, new { @class = "nav-link link-light" })
                </li>

                <li>
                    @Html.ActionLink("Δημιουργία Κατηγορίας", "InsertNewCategory", "Home", null, new { @class = "nav-link link-light" })
                </li>


                <li style="margin-left:150px" class="nav-item">
                    @using (Html.BeginForm("SearchQuery", "Home", FormMethod.Post, new { @class = "d-flex" }))
                    {
                        <input required name="query" type="text" class="form-control" placeholder="Αναζήτηση Συνταγών" />
                        <button style="margin-left:10px" type="submit" class="btn btn-primary ml-1">Αναζήτηση</button>
                    }
                </li>
            </ul>

        </div>
    </nav>
